{
    "name"        : "kgilden/php-digidoc",
    "description" : "A library for signing & verifying documents using estonian id card",
    "homepage"    : "https://github.com/kgilden/php-digidoc",
    "license"     : "MIT",
    "type"        : "library",
    "keywords"    : ["digidoc", "id-card"],
    "authors": [
        {
            "name"  : "Kristen Gilden",
            "email" : "kristen.gilden@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.8",
        "ext-soap": "*",
        "symfony/css-selector": "~2.0",
        "symfony/dom-crawler": "~2.0",
        "symfony/http-foundation": "~2.0",
        "ext-zip": "*",
        "doctrine/collections": "~1.0",
        "symfony/process": "~2.0"
    },
    "require-dev": {
        "wsdl2phpgenerator/wsdl2phpgenerator": "~2.3",
        "php-vfs/php-vfs": "~1.2"
    },
    "autoload": {
        "psr-4": { "KG\\DigiDoc\\": "src/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
